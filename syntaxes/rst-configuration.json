{
  "comments": {
    "lineComment": ".."
  },
  "brackets": [
    ["(", ")"],
    ["<", ">"],
    ["`", "`"]
  ],
  "surroundingPairs": [
    ["(", ")"],
    ["<", ">"],
    ["`", "`"],
    ["'", "'"],
    ["\"", "\""],
    ["*", "*"]
  ],
  "autoClosingPairs": [
    { "open": "(", "close": ")" },
    { "open": "<", "close": ">" },
    { "open": "'", "close": "'" },
    { "open": "\"", "close": "\"" },
    { "open": "`", "close": "`" },
    { "open": "*", "close": "*" }
  ],
  "autoCloseBefore": ":})`>",
  "onEnterRules": [
    {
      "beforeText": "^\\s*\\.\\. *$|::(\\s|$)",
      "action": { "indent": "indent" }
    }
  ],
  "wordPattern": "[\\w-]+"
}
